{% extends 'base.html.twig' %}

{% block title %}Tous les lieux insolites !
{% endblock %}

{% block body %}
	<section class="row">
		{% for place in places %}
			<article class="col-4">
				<div class="row">
					<div class="col-6">
						<h2>{{ place.name }}</h2>
						<p class="lead">
							Post√© par
							{{ place.user.username }}
							le
							{{ place.createdAt|date('d/m/Y')}}
						</p>
					</div>
					<div class="col-6 mt-2 text-end">
						<a href="{{ path('app_view',{slug: place.slug}) }}" class="btn btn-secondary">Voir</a>
					</div>
					{% if place.pictures|length > 0 %}
						<img title="{{ place.pictures.0.title }}" src="{{ asset('uploads/place/' ~ place.pictures.0.file) }}" class="img-fluid">
					{% endif %}

				</div>
			</article>
		{% endfor %}
	</section>

{% endblock %}
