{% extends 'base.html.twig' %}

{% block title %}Mes lieux favoris{% endblock %}

{% block body %}
    <h1>Mes lieux favoris</h1>
    <a href="{{ path('app_place_new') }}" class="btn btn-primary">Ajouter un lieu</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>CreatedAt</th>
                <th>ModifiedAt</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>{{ place.description }}</td>
                <td>{{ place.latitude }}</td>
                <td>{{ place.longitude }}</td>
                <td>{{ place.createdAt ? place.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ place.modifiedAt ? place.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ place.slug }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_view', {'slug': place.slug}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('app_place_edit', {'id': place.id}) }}">Editer</a>
                    {{ include('place/_delete_form.html.twig') }}
                    <a class="btn btn-info" href="{{ path('app_picture_index', {'place_id': place.id}) }}">Photos</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
